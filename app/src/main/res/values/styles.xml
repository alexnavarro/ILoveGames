<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LayoutCardStyle" parent="CardView.Light">
        <item name="android:layout_marginRight">@dimen/default_margin_card_view</item>
        <item name="android:layout_marginLeft">@dimen/default_margin_card_view</item>
        <item name="android:layout_marginBottom">@dimen/default_margin_card_view</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DefaultLayoutStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LayoutCardContentStyle" parent="DefaultLayoutStyle">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Text.Large.ColorDark" parent="Text.Large">
        <item name="android:textColor">@color/primary_text</item>
    </style>

</resources>
